{% extends "layout.njk" %}

{% block content %}
  <main>
    <section class="chefs">
      {% for chef in chefs %}
        <div class="chef">
          <div class="chef__avatar">
            <img src="{{chef.avatar_url}}" alt="">
          </div>
          <div class="chef__infos">
            <h2 class="chef__name">{{chef.name}}</h2>
            <p class="chef__recipes">3 receitas</p>
          </div>
        </div>
      {% endfor %}

    </section>
  </main>
{% endblock content %}