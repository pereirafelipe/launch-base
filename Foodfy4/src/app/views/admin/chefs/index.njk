{% extends "adminLayout.njk" %}

{% block content %}
  <main>

    <h2 class="admin__title">Gerenciar chefs</h2>

    <section class="admin__chefs">
      {% for chef in chefs %}
        <div class="chef">
          <div class="chef__avatar">
            <img src="{{chef.avatar_url}}" alt="">
          </div>
          <div class="chef__infos">
            <h2 class="chef__name">{{chef.name}}</h2>
            <a href="/admin/chefs/{{chef.id}}" class="chef__link">Visualizar</a>
          </div>
        </div>
      {% endfor %}

    </section>

    <a href="/admin/chefs/create" class="new__recipe">
      <div>+</div>
      Novo Chef
    </a>

  </main>
{% endblock content %}