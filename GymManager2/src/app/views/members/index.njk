{% extends "layout.njk" %}

{% block content %}
  <div class="container table-container">
    <div class="header__table">
      <a href="/members/create" class="button">Novo</a>

      <form action="/members" method="get">
        <input type="text" name="filter" placeholder="Digite o nome ou email" value="{{filter}}">
        <button type="submit" class="button__filter">Filtrar</button>
      </form>
    </div>

    <table width="100%">
      <thead>
        <tr>
          <th>Membro</th>
          <th>Email</th>
          <th>Peso</th>
          <th>Altura</th>
          <th>Ação</th>
        </tr>
      </thead>
      <tbody>
        {% for member in members %}
          <tr>
            <td>
              <span style="background: url({{member.avatar_url}}) no-repeat center / cover"></span>
              <p>{{member.name}}</p>
            </td>
            <td>
              {{member.email}}
            </td>
            <td>
              {{member.weight}}kg
            </td>
            <td>
              {{member.height}}cm
            </td>
            <td>
              <a class="button" href="/members/{{member.id}}">Ver</a>
            </td>
          </tr>
        {% endfor %}

      </tbody>
    </table>

    <div class="pagination" data-page="{{pagination.page}}" data-total="{{pagination.total}}" data-filter="{{filter}}"></div>
  </div>
{% endblock content %}