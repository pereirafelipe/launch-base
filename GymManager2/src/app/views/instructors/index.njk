{% extends "layout.njk" %}

{% block content %}
  <div class="container table-container">
    <div class="header__table">
      <a href="/instructors/create" class="button">Novo</a>

      <form action="/instructors" method="get">
        <input type="text" name="filter" placeholder="Digite o nome ou atendimento" value="{{filter}}">
        <button type="submit" class="button__filter">Filtrar</button>
      </form>
    </div>

    <table width="100%">
      <thead>
        <tr>
          <th>Instrutor</th>
          <th>Atendimento</th>
          <th>Alunos</th>
          <th>Ação</th>
        </tr>
      </thead>
      <tbody>
        {% for instructor in instructors %}
          <tr>
            <td>
              <span style="background: url({{instructor.avatar_url}}) no-repeat center / cover"></span>
              <p>{{instructor.name}}</p>
            </td>
            <td>
              {% for service in instructor.services %}
                <span class="table-services">{{service}}</span>
              {% endfor %}
            </td>
            <td>
              <p>{{instructor.total_students}}</p>
            </td>
            <td>
              <a class="button" href="/instructors/{{instructor.id}}">Ver</a>
            </td>
          </tr>
        {% endfor %}

      </tbody>
    </table>

    <div class="pagination" data-page="{{pagination.page}}" data-total="{{pagination.total}}" data-filter="{{filter}}"></div>
  </div>
{% endblock content %}