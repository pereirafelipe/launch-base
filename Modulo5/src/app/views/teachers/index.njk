{% extends "layout.njk" %}

{% block content %}
  <div class="container table-container">
    <div class="header__table">
      <a href="/teachers/create" class="button">Novo</a>

      <form action="/teachers" method="get">
        <input type="text" name="filter" placeholder="Digite o nome ou acompanhamento" value="{{filter}}">
        <button type="submit" class="button__filter">Filtrar</button>
      </form>
    </div>

    <table width="100%">
      <thead>
        <tr>
          <th>Professor</th>
          <th>Acompanhamento</th>
          <th>Ação</th>
        </tr>
      </thead>
      <tbody>
        {% for teacher in teachers %}
          <tr>
            <td>
              <span style="background: url({{teacher.avatar_url}}) no-repeat center / cover"></span>
              <p>{{teacher.name}}</p>
            </td>
            <td>
              {% for service in teacher.subjects_taught %}
                <span class="table-services">{{service}}</span>
              {% endfor %}
            </td>
            <td>
              <a class="button" href="/teachers/{{teacher.id}}">Ver</a>
            </td>
          </tr>
        {% endfor %}

      </tbody>
    </table>
  </div>
{% endblock content %}