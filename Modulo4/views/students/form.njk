<div class="item">
  <div>Avatar URL</div>
  <div>
    <input type="url" name="avatar_url" placeholder="http://" value="{{student.avatar_url}}">
  </div>
</div>

<div class="item">
  <div>Professor</div>
  <div>
    <input type="text" name="name" placeholder="Nome completo do professor" value="{{student.name}}">
  </div>
</div>

<div class="item">
  <div>Data de nascimento</div>
  <div>
    <input type="date" name="birth" value="{{student.birth}}">
  </div>
</div>

<div class="item">
  <div>Grau de escolaridade</div>
  <div>
    <select name="schooling">
      <option value="em" {% if student.schooling == "em" %} selected="selected" {% endif %}>Ensino Médio</option>
      <option value="u" {% if student.schooling == "u" %} selected="selected" {% endif %}>Ensino Superior Completo</option>
      <option value="m" {% if student.schooling == "m" %} selected="selected" {% endif %}>Mestrado</option>
      <option value="d" {% if student.schooling == "d" %} selected="selected" {% endif %}>Doutorado</option>
    </select>
  </div>
</div>

<div class="item">
  <div>Tipo de aula</div>
  <div>
    <span><input type="radio" name="type_class" value="P" id="pres" {% if student.type_class == "P" %} checked="checked" {% endif %}>
      <label for="pres">Presencial</label>
    </span>
    <span><input type="radio" name="type_class" value="D" id="dist" {% if student.type_class == "D" %} checked="checked" {% endif %}>
      <label for="dist">À distância</label>
    </span>

  </div>
</div>

<div class="item">
  <div>Área de atuação</div>
  <div>
    <input type="text" name="services" placeholder="Ex: Matemática, Física" value="{{student.services}}">
  </div>

  <button type="submit">Salvar</button>