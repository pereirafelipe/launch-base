{% extends "layout.njk" %}

{% block content %}
  <div class="container">
    <section style="background: url({{student.avatar_url}}) no-repeat center / cover" class="avatar"></section>
    <section class="detail">
      <div class="content">
        <h3>Detalhes</h3>

        <div class="item">
          <div>Nome completo:</div>
          <div>{{student.name}}</div>
        </div>

        <div class="item">
          <div>Idade</div>
          <div>{{student.age}}</div>
        </div>

        <div class="item">
          <div>Grau de escolaridade</div>
          <div>
            {{student.schooling}}
          </div>
        </div>

        <div class="item">
          <div>Tipo de aula</div>
          <div>
            {% if student.type_class === "D" %}
              À Distância
            {% else %}
              Presencial
            {% endif %}
          </div>
        </div>

        <div class="item">
          <div>Acompanhamento</div>
          <div>
            {% for service in student.services %}
              <span>{{service}}</span>
            {% endfor %}
          </div>
        </div>

        <div class="item">
          <div>Desde</div>
          <div>{{student.created_at}}</div>
        </div>

        <div class="buttons">
          <a class="button" href="/students/{{student.id}}/edit">Editar</a>
          <form method="POST" action="/students?_method=DELETE">
            <input type="hidden" name="id" value="{{student.id}}">
            <button type="submit">Deletar</button>
          </form>
        </div>

      </div>

    </section>
  </div>
{% endblock content %}