{% extends "layout.njk" %}

{% block content %}
  <div class="container">
    <section style="background: url({{teacher.avatar_url}}) no-repeat center / cover" class="avatar"></section>
    <section class="detail">
      <div class="content">
        <h3>Detalhes</h3>

        <div class="item">
          <div>Nome completo:</div>
          <div>{{teacher.name}}</div>
        </div>

        <div class="item">
          <div>Idade</div>
          <div>{{teacher.age}}</div>
        </div>

        <div class="item">
          <div>Grau de escolaridade</div>
          <div>
            {% if teacher.schooling === "em" %}
              Ensino Médio
            {% elif teacher.schooling === "u" %}
              Ensino Superior Completo
            {% elif teacher.schooling === "m" %}
              Mestrado
            {% else %}
              Doutorado
            {% endif %}
          </div>
        </div>

        <div class="item">
          <div>Tipo de aula</div>
          <div>
            {% if teacher.type_class === "D" %}
              À Distância
            {% else %}
              Presencial
            {% endif %}
          </div>
        </div>

        <div class="item">
          <div>Acompanhamento</div>
          <div>
            {% for service in teacher.services %}
              <span>{{service}}</span>
            {% endfor %}
          </div>
        </div>

        <div class="item">
          <div>Desde</div>
          <div>01/01/2019</div>
        </div>
      </div>

    </section>
  </div>
{% endblock content %}