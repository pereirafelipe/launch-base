{% extends "layout.njk" %}

{% block head %}
  <title>{{about.name}}
    | Sobre</title>
{% endblock head %}

{% block content %}
  <main>
    <div class="logo_image">
      <img src="/assets/{{about.avatar}}.png" alt="Logo Rocketseat"/>
    </div>

    <h1>{{about.name}}</h1>
    <h2>{{about.role}}</h2>

    <div class="description">
      <p class="p_rocket">
        {{about.strong}}
      </p>
      <p>
        {{about.description}}
      </p>
    </div>

    <div class="techs">
      <h3>As mesmas tecnologias adotadas pelos melhores times do mundo:</h3>
      <ul>
        {% for tech in about.techs %}
          <li>{{tech}}</li>
        {% endfor %}
      </ul>
    </div>
  </main>

  <div class="nav_links footer">
    {% for link in about.links %}
      <a href="{{link.url}}" target="_blank">{{link.name}}</a>
    {% endfor %}
  </div>

  <footer>
    <p>Residencial Acalanto - R. Guilherme Gemballa, 260 - Sala 3 - Jardim América, Rio do Sul - SC, 89160-188</p>
    <p>Rocketseat © 2020 - Todos os direitos reservados</p>
  </footer>
{% endblock content %}